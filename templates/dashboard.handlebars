<h1>Dashboard</h1>
<p>Welcome to the Licener dashboard.</p>

{{!-- Stats Cards Section using generic CSS classes --}}
<div class="data-card-grid">
  <div class="data-card card-border-primary">
    <h3 class="data-card-title">Total Licenses</h3>
    <p class="data-card-value">{{stats.totalLicenses}}</p>
  </div>

  <div class="data-card card-border-success">
    <h3 class="data-card-title">Active Licenses</h3>
    <p class="data-card-value">{{stats.activeLicenses}}</p>
  </div>

  <div class="data-card card-border-warning">
    <h3 class="data-card-title">Expiring Soon</h3>
    <p class="data-card-value">{{stats.expiringSoon}}</p>
  </div>
</div>

{{!-- Recent Licenses Table Section using generic CSS classes --}}
<div class="data-table-container">
  <div class="table-header-bg">
    <h2 class="table-header-title">Recent Licenses</h2>
  </div>

  <div class="table-inner-padding">
    {{#if recentLicenses.length}}
      {{!-- Use standard Bootstrap table classes --}}
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Product</th>
            <th>Vendor</th>
            <th>Status</th>
            <th>Expiry</th>
          </tr>
        </thead>
        <tbody>
          {{#each recentLicenses}}
            <tr>
              <td>{{this.product}}</td>
              <td>{{this.vendor}}</td>
              <td>
                {{!-- TODO: Enhance with status badge helper --}}
                {{this.status}}
              </td>
              <td>{{formatDate this.expiryDate "MMM DD, YYYY"}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <p>No recent licenses found.</p>
    {{/if}}

    {{!-- Use standard Bootstrap button classes --}}
    <div class="data-table-action-container">
      <a href="/licenses" class="btn btn-primary">View All Licenses</a>
    </div>
  </div>
</div>
