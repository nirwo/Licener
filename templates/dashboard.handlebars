<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Dashboard</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <a href="/licenses/add" class="btn btn-sm btn-primary">
        <i class="fas fa-plus-circle me-1"></i> Add License
      </a>
      <a href="/systems/add" class="btn btn-sm btn-outline-secondary">
        <i class="fas fa-plus-circle me-1"></i> Add System
      </a>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-primary shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Licenses</div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">{{licenseCount}}</div>
          </div>
          <div class="col-auto">
            <i class="fas fa-file-contract fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
      <div class="card-footer bg-light py-1">
        <a href="/licenses" class="text-decoration-none">View Details</a>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-warning shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Expiring Soon</div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">{{expiringLicenses.length}}</div>
          </div>
          <div class="col-auto">
            <i class="fas fa-calendar-times fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
      <div class="card-footer bg-light py-1">
        <a href="/reports/license-expiry" class="text-decoration-none">View Details</a>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-danger shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Expired Licenses</div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">{{expiredLicenses}}</div>
          </div>
          <div class="col-auto">
            <i class="fas fa-exclamation-circle fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
      <div class="card-footer bg-light py-1">
        <a href="/licenses?status=expired" class="text-decoration-none">View Details</a>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-success shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Managed Systems</div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">{{systemCount}}</div>
          </div>
          <div class="col-auto">
            <i class="fas fa-server fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
      <div class="card-footer bg-light py-1">
        <a href="/systems" class="text-decoration-none">View Details</a>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Licenses Expiring Soon</h6>
        <a href="/reports/license-expiry" class="btn btn-sm btn-primary">View All</a>
      </div>
      <div class="card-body">
        {{#if expiringLicenses.length}}
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>License</th>
                  <th>Product</th>
                  <th>Expiry Date</th>
                  <th>Days Left</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {{#each expiringLicenses}}
                  <tr>
                    <td>{{name}}</td>
                    <td>{{product}}</td>
                    <td>{{formatDate expiryDate "MMM DD, YYYY"}}</td>
                    <td>
                      <span class="badge bg-{{daysRemainingClass (daysFromNow expiryDate)}}">
                        {{daysFromNow expiryDate}} days
                      </span>
                    </td>
                    <td>
                      <a href="/licenses/{{_id}}" class="btn btn-sm btn-primary">
                        <i class="fas fa-eye"></i>
                      </a>
                      <a href="/licenses/renew/{{_id}}" class="btn btn-sm btn-success">
                        <i class="fas fa-sync-alt"></i>
                      </a>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        {{else}}
          <p class="text-center py-3">No licenses expiring soon. Great job!</p>
        {{/if}}
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">License Utilization</h6>
      </div>
      <div class="card-body">
        <div class="chart-container" style="position: relative; height:250px; width:100%">
          <canvas id="licenseUtilizationChart"></canvas>
        </div>
        <div class="mt-4 text-center small">
          <a href="/reports/license-utilization" class="btn btn-sm btn-primary">View Detailed Report</a>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // License Utilization Chart
    var licenseData = {{licenseUtilization}};
    
    if (licenseData && licenseData.labels && licenseData.labels.length > 0) {
      var ctx = document.getElementById('licenseUtilizationChart').getContext('2d');
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: licenseData.labels,
          datasets: [{
            label: 'Utilization %',
            data: licenseData.data,
            backgroundColor: [
              'rgba(75, 192, 192, 0.2)',
              'rgba(54, 162, 235, 0.2)',
              'rgba(255, 206, 86, 0.2)',
              'rgba(153, 102, 255, 0.2)',
              'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
              'rgba(75, 192, 192, 1)',
              'rgba(54, 162, 235, 1)',
              'rgba(255, 206, 86, 1)',
              'rgba(153, 102, 255, 1)',
              'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          scales: {
            y: {
              beginAtZero: true,
              max: 100,
              ticks: {
                callback: function(value) {
                  return value + '%';
                }
              }
            }
          },
          plugins: {
            tooltip: {
              callbacks: {
                label: function(context) {
                  return context.dataset.label + ': ' + context.raw + '%';
                }
              }
            }
          }
        }
      });
    } else {
      document.getElementById('licenseUtilizationChart').parentNode.innerHTML = 
        '<div class="text-center py-5">No license utilization data available</div>';
    }
  });
</script>

<style>
  .border-left-primary {
    border-left: 0.25rem solid #4e73df !important;
  }
  .border-left-success {
    border-left: 0.25rem solid #1cc88a !important;
  }
  .border-left-warning {
    border-left: 0.25rem solid #f6c23e !important;
  }
  .border-left-danger {
    border-left: 0.25rem solid #e74a3b !important;
  }
</style>