<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3">Dashboard</h1>
  <div>
    <button class="btn btn-sm btn-outline-secondary me-2" id="refreshDashboard">
      <i class="fas fa-sync-alt me-1"></i> Refresh
    </button>
    <div class="btn-group">
      <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="fas fa-plus-circle me-1"></i> Quick Add
      </button>
      <ul class="dropdown-menu dropdown-menu-end">
        <li><a class="dropdown-item" href="/licenses/add">Add License</a></li>
        <li><a class="dropdown-item" href="/systems/add">Add System</a></li>
        <li><hr class="dropdown-divider"></li>
        <li><a class="dropdown-item" href="/licenses/import">Import Licenses</a></li>
        <li><a class="dropdown-item" href="/systems/import">Import Systems</a></li>
      </ul>
    </div>
  </div>
</div>

<!-- Overview Cards -->
<div class="row mb-4">
  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-primary h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
              Total Licenses
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">{{stats.totalLicenses}}</div>
          </div>
          <div class="col-auto">
            <i class="fas fa-file-contract fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-success h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
              Active Licenses
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">{{stats.activeLicenses}}</div>
          </div>
          <div class="col-auto">
            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-warning h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
              Expiring Soon (30 days)
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">{{stats.expiringSoon}}</div>
          </div>
          <div class="col-auto">
            <i class="fas fa-calendar-times fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-info h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
              Systems
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">{{stats.totalSystems}}</div>
          </div>
          <div class="col-auto">
            <i class="fas fa-server fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row mb-4">
  <!-- License Status Chart -->
  <div class="col-lg-6 mb-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">License Status</h5>
      </div>
      <div class="card-body">
        <div class="chart-container">
          <canvas id="licenseStatusChart"></canvas>
          <div id="licenseStatusFallback" class="chart-fallback" style="display:none;">
            <p class="text-center py-4">
              <i class="fas fa-chart-pie fa-3x mb-3 text-secondary"></i><br>
              License Status Distribution<br>
              <small class="text-muted">Active: {{stats.activeLicenses}}, Expired: {{stats.expiredLicenses}}, Pending: {{stats.pendingLicenses}}, Renewed: {{stats.renewedLicenses}}</small>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Expiry Timeline -->
  <div class="col-lg-6 mb-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Upcoming Expirations</h5>
      </div>
      <div class="card-body">
        <div class="chart-container">
          <canvas id="expiryTimelineChart"></canvas>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row mb-4">
  <!-- Licenses By Vendor -->
  <div class="col-lg-6 mb-4">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Licenses by Vendor</h5>
        <a href="/reports/vendor-distribution" class="btn btn-sm btn-link">
          View Report
        </a>
      </div>
      <div class="card-body">
        <div class="chart-container">
          <canvas id="vendorChart"></canvas>
        </div>
      </div>
    </div>
  </div>
  
  <!-- License Costs -->
  <div class="col-lg-6 mb-4">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Cost Distribution</h5>
        <a href="/reports/cost-analysis" class="btn btn-sm btn-link">
          View Report
        </a>
      </div>
      <div class="card-body">
        <div class="chart-container">
          <canvas id="costChart"></canvas>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Recent Licenses -->
<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Recent Licenses</h5>
    <a href="/licenses" class="btn btn-sm btn-link">View All</a>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Product</th>
            <th>Vendor</th>
            <th>Assigned To</th>
            <th>Status</th>
            <th>Expiry Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#if recentLicenses}}
            {{#each recentLicenses}}
              <tr>
                <td>{{product}}</td>
                <td>{{vendor}}</td>
                <td>{{assignedTo}}</td>
                <td>
                  <span class="badge bg-{{licenseStatusClass status}}">
                    {{status}}
                  </span>
                </td>
                <td>
                  {{formatDate expiryDate "MMM D, YYYY"}}
                </td>
                <td>
                  <a href="/licenses/view/{{_id}}" class="btn btn-sm btn-info">
                    <i class="fas fa-eye"></i>
                  </a>
                </td>
              </tr>
            {{/each}}
          {{else}}
            <tr>
              <td colspan="6" class="text-center">No licenses found</td>
            </tr>
          {{/if}}
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Alert Cards -->
<div class="row">
  {{#if alerts}}
    {{#each alerts}}
      <div class="col-lg-6 mb-4">
        <div class="card border-left-{{type}} h-100">
          <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-{{type}}">
              <i class="fas fa-{{icon}} me-2"></i> {{title}}
            </h5>
            <button type="button" class="btn-close btn-sm dismiss-alert" data-id="{{id}}" aria-label="Close"></button>
          </div>
          <div class="card-body">
            <p>{{message}}</p>
            {{#if actionLink}}
              <a href="{{actionLink}}" class="btn btn-sm btn-{{type}}">{{actionText}}</a>
            {{/if}}
          </div>
        </div>
      </div>
    {{/each}}
  {{/if}}
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Make sure Chart is available
    if (typeof Chart === 'undefined') {
      console.error('Chart.js is not loaded');
      // Show fallback elements
      document.querySelectorAll('.chart-fallback').forEach(el => {
        el.style.display = 'block';
      });
      document.querySelectorAll('canvas').forEach(el => {
        el.style.display = 'none';
      });
      return;
    }

    // License Status Chart
    const licenseStatusChart = document.getElementById('licenseStatusChart');
    if (!licenseStatusChart) {
      console.warn('License status chart element not found');
      document.getElementById('licenseStatusFallback').style.display = 'block';
      return;
    }

    const licenseStatusCtx = licenseStatusChart.getContext('2d');
    try {
      new Chart(licenseStatusCtx, {
      type: 'doughnut',
      data: {
        labels: ['Active', 'Expired', 'Pending', 'Renewed'],
        datasets: [{
          data: [{{stats.activeLicenses}}, {{stats.expiredLicenses}}, {{stats.pendingLicenses}}, {{stats.renewedLicenses}}],
          backgroundColor: ['#1cc88a', '#e74a3b', '#f6c23e', '#36b9cc'],
          hoverBackgroundColor: ['#169b6b', '#e02d1b', '#f4b619', '#2c9faf'],
          hoverBorderColor: "rgba(234, 236, 244, 1)",
        }]
      },
      options: {
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'bottom'
          }
        },
        cutout: '70%',
      }
    });
    } catch (err) {
      console.error('Error initializing chart:', err);
    }
    
    // Expiry Timeline Chart
    const expiryTimelineChart = document.getElementById('expiryTimelineChart');
    if (!expiryTimelineChart) {
      console.warn('Expiry timeline chart element not found');
      return;
    }

    const expiryTimelineCtx = expiryTimelineChart.getContext('2d');
    try {
      new Chart(expiryTimelineCtx, {
      type: 'bar',
      data: {
        labels: {{{safeJson chartData.expiryTimeline.labels}}},
        datasets: [{
          label: 'Expiring Licenses',
          data: {{{safeJson chartData.expiryTimeline.data}}},
          backgroundColor: {{{safeJson chartData.expiryTimeline.colors}}},
        }]
      },
      options: {
        maintainAspectRatio: false,
        scales: {
          y: {
            beginAtZero: true,
            title: {
              display: true,
              text: 'Number of Licenses'
            }
          }
        }
      }
    });
    } catch (err) {
      console.error('Error initializing chart:', err);
    }
    
    // Vendor Chart
    const vendorChart = document.getElementById('vendorChart');
    if (!vendorChart) {
      console.warn('Vendor chart element not found');
      return;
    }

    const vendorCtx = vendorChart.getContext('2d');
    try {
      new Chart(vendorCtx, {
      type: 'pie',
      data: {
        labels: {{{safeJson chartData.vendors.labels}}},
        datasets: [{
          data: {{{safeJson chartData.vendors.data}}},
          backgroundColor: [
            '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b',
            '#5a5c69', '#858796', '#6f42c1', '#20c9a6', '#e83e8c',
            '#6610f2', '#fd7e14', '#17a2b8', '#28a745', '#dc3545'
          ],
        }]
      },
      options: {
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'bottom'
          }
        }
      }
    });
    } catch (err) {
      console.error('Error initializing chart:', err);
    }
    
    // Cost Chart
    const costChart = document.getElementById('costChart');
    if (!costChart) {
      console.warn('Cost chart element not found');
      return;
    }

    const costCtx = costChart.getContext('2d');
    try {
      new Chart(costCtx, {
      type: 'bar',
      data: {
        labels: {{{safeJson chartData.costs.labels}}},
        datasets: [{
          label: 'License Cost',
          data: {{{safeJson chartData.costs.data}}},
          backgroundColor: '#4e73df',
        }]
      },
      options: {
        maintainAspectRatio: false,
        scales: {
          y: {
            beginAtZero: true,
            title: {
              display: true,
              text: 'Cost ($)'
            }
          }
        }
      }
    });
    } catch (err) {
      console.error('Error initializing chart:', err);
    }
    
    // Dismiss alert
    document.querySelectorAll('.dismiss-alert').forEach(button => {
      button.addEventListener('click', function() {
        const alertId = this.getAttribute('data-id');
        const card = this.closest('.col-lg-6');
        
        // Send request to mark alert as read
        fetch(`/api/alerts/${alertId}/dismiss`, { method: 'POST' })
          .then(response => {
            if (response.ok) {
              // Remove the alert from the UI
              card.style.opacity = '0';
              setTimeout(() => card.remove(), 300);
            }
          });
      });
    });
    
    // Refresh dashboard
    document.getElementById('refreshDashboard').addEventListener('click', function() {
      this.disabled = true;
      this.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i> Refreshing...';
      
      // Reload the page
      setTimeout(() => window.location.reload(), 500);
    });
  });
</script>