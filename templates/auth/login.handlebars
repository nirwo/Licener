<div class="auth-wrapper gradient-background">
  <div class="container-fluid py-5">
    <div class="row justify-content-center">
      <div class="col-xxl-8 col-xl-9 col-lg-11">
        <div class="card shadow-lg">
          <div class="card-body p-0">
            <div class="row g-0">
              <div class="col-lg-5 d-none d-lg-block bg-login-image">
                <div class="text-white p-5 h-100 d-flex flex-column justify-content-center">
                  <h2 class="display-4 fw-bold mb-4">Welcome Back</h2>
                  <p class="lead mb-4">Your all-in-one license management solution</p>
                  <div class="features mt-5">
                    <div class="feature-item d-flex align-items-center mb-3">
                      <div class="feature-icon me-3">
                        <i class="fas fa-check-circle"></i>
                      </div>
                      <div class="feature-text">Access your license dashboard</div>
                    </div>
                    <div class="feature-item d-flex align-items-center mb-3">
                      <div class="feature-icon me-3">
                        <i class="fas fa-check-circle"></i>
                      </div>
                      <div class="feature-text">Manage your subscriptions</div>
                    </div>
                    <div class="feature-item d-flex align-items-center">
                      <div class="feature-icon me-3">
                        <i class="fas fa-check-circle"></i>
                      </div>
                      <div class="feature-text">View renewal notifications</div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-7">
                <div class="p-4 p-lg-5">
                  <div class="text-center mb-4">
                    <h1 class="h3 text-gray-900 fw-bold">Sign In to Your Account</h1>
                    <p class="text-muted">Access your license management dashboard</p>
                  </div>
                  {{#if error_msg}}
                  <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>{{error_msg}}
                  </div>
                  {{/if}}
                  {{#if success_msg}}
                  <div class="alert alert-success" role="alert">
                    <i class="fas fa-check-circle me-2"></i>{{success_msg}}
                  </div>
                  {{/if}}
                  <form class="user" action="/auth/login" method="POST">
                    <div class="form-group mb-3">
                      <label for="email" class="form-label">Email Address</label>
                      <div class="input-group input-group-merge">
                        <span class="input-group-text bg-light"><i class="fas fa-envelope"></i></span>
                        <input type="email" class="form-control form-control-user" id="email" name="email" 
                          placeholder="Enter your email" required>
                      </div>
                    </div>
                    <div class="form-group mb-4">
                      <label for="password" class="form-label">Password</label>
                      <div class="input-group input-group-merge">
                        <span class="input-group-text bg-light"><i class="fas fa-lock"></i></span>
                        <input type="password" class="form-control form-control-user" id="password" name="password" 
                          placeholder="Enter your password" required>
                      </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-4">
                      <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="remember" name="remember">
                        <label class="form-check-label" for="remember">Remember Me</label>
                      </div>
                      <a href="/auth/forgot-password" class="small text-primary">Forgot Password?</a>
                    </div>
                    <button type="submit" class="btn btn-primary btn-user btn-block w-100 py-3">
                      <i class="fas fa-sign-in-alt me-2"></i>Sign In
                    </button>
                  </form>
                  <hr class="my-4">
                  <div class="text-center">
                    <a class="small fw-bold" href="/auth/register">Don't have an account? Create one!</a>
                  </div>
                  <div class="text-center mt-3">
                    <a class="small" href="#"><i class="fas fa-question-circle me-1"></i>Need help?</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
body.login-page {
  background: transparent;
  height: auto;
  margin: 0;
  padding: 0;
}

.gradient-background {
  background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
  min-height: 100vh;
  display: flex;
  align-items: center;
}

.bg-login-image {
  background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
  background-size: cover;
  position: relative;
  min-height: 600px;
}

.feature-icon i {
  color: #64e9ff;
  font-size: 1.2rem;
}

.feature-text {
  color: #fff;
  font-size: 1rem;
}

.card {
  border: none;
  border-radius: 1rem;
  overflow: hidden;
  max-width: 1200px;
  margin: 0 auto;
}

.shadow-lg {
  box-shadow: 0 0.5rem 2rem rgba(0, 0, 0, 0.15) !important;
}

.form-control-user {
  border-radius: 0.5rem;
  padding: 0.75rem 1rem;
  font-size: 0.9rem;
}

.btn-user {
  padding: 0.75rem 1rem;
  border-radius: 0.5rem;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: #4e73df;
  border-color: #4e73df;
}

.btn-primary:hover {
  background-color: #2e59d9;
  border-color: #2e59d9;
  transform: translateY(-2px);
}

.input-group-merge .input-group-text {
  background-color: #f8f9fc;
  border-right: none;
  color: #6e707e;
}

.input-group-merge .form-control {
  border-left: none;
}

.input-group-merge .form-control:focus {
  box-shadow: none;
  border-color: #d1d3e2;
}

.form-control:focus {
  border-color: #4e73df;
  box-shadow: 0 0 0 0.25rem rgba(78, 115, 223, 0.1);
}

.alert {
  border-radius: 0.5rem;
  margin-bottom: 1.5rem;
  padding: 1rem;
}

.form-check-input:checked {
  background-color: #4e73df;
  border-color: #4e73df;
}

hr {
  opacity: 0.1;
}

@media (max-width: 1199.98px) {
  .bg-login-image {
    min-height: 550px;
  }
}

@media (max-width: 991.98px) {
  .auth-wrapper {
    padding: 2rem 1rem;
    display: block;
    align-items: normal;
  }
  
  .card {
    margin: 0 auto;
  }
  
  .bg-login-image {
    min-height: 250px;
    display: block !important;
  }
  
  .p-lg-5 {
    padding: 2rem !important;
  }
}

@media (max-width: 767.98px) {
  .card {
    border-radius: 0.75rem;
  }
}
</style>
