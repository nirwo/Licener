<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Subscription Details</h1>
    <div>
      <a href="/subscriptions/{{subscription._id}}/edit" class="btn btn-warning me-2">
        <i class="fas fa-edit me-1"></i> Edit
      </a>
      <a href="/subscriptions" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i> Back to List
      </a>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0">Subscription Information</h5>
        </div>
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-md-6">
              <h6 class="text-muted">Product Name</h6>
              <p>{{subscription.product}}</p>
            </div>
            <div class="col-md-6">
              <h6 class="text-muted">Vendor</h6>
              <p>{{subscription.vendor.name}}</p>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-md-6">
              <h6 class="text-muted">Subscription Type</h6>
              <p>{{subscription.type}}</p>
            </div>
            <div class="col-md-6">
              <h6 class="text-muted">Status</h6>
              <span class="badge bg-{{#if (eq subscription.status 'active')}}success{{else if (eq subscription.status 'expired')}}danger{{else}}warning{{/if}}">
                {{subscription.status}}
              </span>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-md-6">
              <h6 class="text-muted">Seats</h6>
              <p>{{subscription.seats}}</p>
            </div>
            <div class="col-md-6">
              <h6 class="text-muted">Cost</h6>
              <p>${{subscription.cost}}</p>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-md-6">
              <h6 class="text-muted">Purchase Date</h6>
              <p>{{subscription.purchaseDate}}</p>
            </div>
            <div class="col-md-6">
              <h6 class="text-muted">Renewal Date</h6>
              <p>{{subscription.renewalDate}}</p>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <h6 class="text-muted">Notes</h6>
              <p>{{subscription.notes}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0">Assigned System</h5>
        </div>
        <div class="card-body">
          {{#if subscription.system}}
            <h6 class="text-muted">System Name</h6>
            <p>{{subscription.system.name}}</p>
            <h6 class="text-muted">System Type</h6>
            <p>{{subscription.system.systemType}}</p>
            <h6 class="text-muted">Environment</h6>
            <p>{{subscription.system.environment}}</p>
          {{else}}
            <p class="text-muted">No system assigned</p>
          {{/if}}
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Contract Details</h5>
        </div>
        <div class="card-body">
          {{#if subscription.contractUrl}}
            <a href="{{subscription.contractUrl}}" target="_blank" class="btn btn-primary mb-3">
              <i class="fas fa-file-contract me-1"></i> View Contract
            </a>
          {{else}}
            <p class="text-muted">No contract URL provided</p>
          {{/if}}

          {{#if subscription.attachments.length}}
            <h6 class="text-muted">Attachments</h6>
            <ul class="list-unstyled">
              {{#each subscription.attachments}}
                <li class="mb-2">
                  <a href="{{this.url}}" target="_blank" class="text-decoration-none">
                    <i class="fas fa-paperclip me-1"></i> {{this.name}}
                  </a>
                </li>
              {{/each}}
            </ul>
          {{else}}
            <p class="text-muted">No attachments</p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div> 