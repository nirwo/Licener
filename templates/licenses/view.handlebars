<h1 class="h3 mb-4">License Details</h1>

<div class="row mb-4">
  <div class="col-lg-8">
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">{{license.product}}</h5>
        <div>
          <a href="/licenses/edit/{{license._id}}" class="btn btn-sm btn-warning">
            <i class="fas fa-edit me-1"></i> Edit
          </a>
          <a href="/licenses" class="btn btn-sm btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back
          </a>
        </div>
      </div>
      <div class="card-body">
        <div class="row license-details">
          <div class="col-md-6">
            <div class="mb-3">
              <span class="label d-block">License Key</span>
              <div class="input-group">
                <input type="text" class="form-control form-control-sm" id="licenseKey" value="{{license.licenseKey}}" readonly>
                <button class="btn btn-outline-secondary btn-sm" type="button" onclick="copyToClipboard('licenseKey')">
                  <i class="fas fa-copy"></i>
                </button>
              </div>
            </div>
            
            <div class="mb-3">
              <span class="label">Vendor</span>
              <p>{{license.vendor}}</p>
            </div>
            
            <div class="mb-3">
              <span class="label">Status</span>
              <p><span class="badge bg-success">{{license.status}}</span></p>
            </div>
            
            <div class="mb-3">
              <span class="label">Purchase Date</span>
              <p>{{license.purchaseDate}}</p>
            </div>
          </div>
          
          <div class="col-md-6">
            <div class="mb-3">
              <span class="label">Expiry Date</span>
              <p>
                {{license.expiryDate}}
                <span class="badge bg-warning ms-2">
                  30 days remaining
                </span>
              </p>
            </div>
            
            <div class="mb-3">
              <span class="label">Cost</span>
              <p>{{#if license.cost}}{{license.cost}} {{license.currency}}{{else}}Not specified{{/if}}</p>
            </div>
            
            <div class="mb-3">
              <span class="label">Seats</span>
              <p>
                {{license.usedSeats}} / {{license.totalSeats}} used
                <div class="progress mt-1" style="height: 6px;">
                  <div class="progress-bar bg-success" 
                    role="progressbar" 
                    style="width: 40%" 
                    aria-valuenow="40" 
                    aria-valuemin="0" 
                    aria-valuemax="100"></div>
                </div>
              </p>
            </div>
          </div>
        </div>
        
        {{#if license.notes}}
          <div class="mt-3">
            <span class="label">Notes</span>
            <div class="mt-2 p-3 bg-light rounded">
              {{license.notes}}
            </div>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
  
  <div class="col-lg-4">
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">License Information</h5>
      </div>
      <div class="card-body">
        <div class="alert alert-info">
          <p><i class="fas fa-info-circle me-2"></i> This is a demo license.</p>
          <p class="mb-0">Created for demonstration purposes.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function copyToClipboard(elementId) {
  const element = document.getElementById(elementId);
  element.select();
  document.execCommand('copy');
  
  // Show a temporary message
  const button = element.nextElementSibling;
  const originalHtml = button.innerHTML;
  button.innerHTML = '<i class="fas fa-check"></i>';
  setTimeout(() => {
    button.innerHTML = originalHtml;
  }, 1500);
}
</script>