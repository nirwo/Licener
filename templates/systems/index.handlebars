<h1 class="h3 mb-4">Systems</h1>

<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Manage Systems</h5>
    <div>
      <a href="/systems/add" class="btn btn-sm btn-primary">
        <i class="fas fa-plus-circle me-1"></i> Add New
      </a>
      <a href="/systems/import" class="btn btn-sm btn-secondary">
        <i class="fas fa-file-import me-1"></i> Import
      </a>
      <a href="/systems/scan" class="btn btn-sm btn-success">
        <i class="fas fa-network-wired me-1"></i> Network Scan
      </a>
    </div>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover datatable">
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Environment</th>
            <th>Status</th>
            <th>Licenses</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#if systems}}
            {{#each systems}}
              <tr>
                <td>{{name}}</td>
                <td>{{systemType}}</td>
                <td>{{environment}}</td>
                <td>
                  <span class="badge bg-{{systemStatusClass status}}">
                    {{status}}
                  </span>
                </td>
                <td>
                  <span class="badge bg-primary">{{licenseCount}}</span>
                </td>
                <td>
                  <div class="btn-group btn-group-sm">
                    <a href="/systems/view/{{_id}}" class="btn btn-info">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="/systems/edit/{{_id}}" class="btn btn-warning">
                      <i class="fas fa-edit"></i>
                    </a>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{_id}}">
                      <i class="fas fa-trash-alt"></i>
                    </button>
                  </div>

                  <!-- Delete Modal -->
                  <div class="modal fade" id="deleteModal{{_id}}" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <p>Are you sure you want to delete <strong>{{name}}</strong>?</p>
                          {{#if licenseCount}}
                            <div class="alert alert-warning">
                              <i class="fas fa-exclamation-triangle me-2"></i>
                              This system has {{licenseCount}} associated licenses that will be unassigned.
                            </div>
                          {{/if}}
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                          <form action="/systems/{{_id}}?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger">Delete</button>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                </td>
              </tr>
            {{/each}}
          {{else}}
            <tr>
              <td colspan="6" class="text-center">
                <p class="my-3">No systems found</p>
                <a href="/systems/add" class="btn btn-primary">
                  <i class="fas fa-plus-circle me-1"></i> Add Your First System
                </a>
              </td>
            </tr>
          {{/if}}
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    try {
      // Make sure jQuery is available
      if (typeof $ === 'undefined') {
        console.error('jQuery is not available!');
        return;
      }
      
      // Make sure DataTables plugin is available
      if (typeof $.fn.DataTable === 'undefined') {
        console.error('DataTables plugin is not available!');
        return;
      }
      
      // Clean any broken DataTable instances
      $('.datatable').each(function() {
        try {
          // First check if there are any elements with _DT_CellIndex set incorrectly
          $(this).find('td').removeAttr('_DT_CellIndex');
          
          // If a DataTable instance exists on this element, destroy it properly
          if ($.fn.DataTable.isDataTable(this)) {
            $(this).DataTable().destroy();
          }
        } catch (err) {
          console.error('Error cleaning up DataTable:', err);
        }
      });
      
      // Initialize DataTables with proper column definitions
      $('.datatable').DataTable({
        responsive: false,
        pageLength: 10,
        lengthMenu: [5, 10, 25, 50],
        language: {
          search: "Filter records:"
        },
        ordering: true,
        searching: true,
        paging: true,
        columns: [
          { data: 'name', title: 'Name' },
          { data: 'type', title: 'Type' },
          { data: 'environment', title: 'Environment' },
          { data: 'status', title: 'Status' },
          { data: 'licenses', title: 'Licenses' },
          { data: 'actions', title: 'Actions', orderable: false, searchable: false }
        ],
        columnDefs: [
          {
            targets: -1, // Last column (Actions)
            orderable: false,
            searchable: false
          }
        ]
      });
      
      console.log('DataTables initialization complete for systems table.');
    } catch (err) {
      console.error('Error initializing DataTables:', err);
    }
  });
</script>