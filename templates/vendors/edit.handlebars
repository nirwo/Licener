<h1 class="h3 mb-4">Edit Vendor</h1>

<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0">Vendor Details</h5>
  </div>
  <div class="card-body">
    <form action="/vendors/{{vendor._id}}?_method=PUT" method="POST">
      <div class="row mb-3">
        <div class="col-md-6">
          <div class="mb-3">
            <label for="name" class="form-label">Vendor Name</label>
            <input type="text" class="form-control" id="name" name="name" value="{{vendor.name}}" required>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <label for="website" class="form-label">Website</label>
            <input type="url" class="form-control" id="website" name="website" value="{{vendor.website}}" placeholder="https://example.com">
          </div>
        </div>
      </div>
      
      <div class="row mb-3">
        <div class="col-md-6">
          <div class="mb-3">
            <label for="contactPerson" class="form-label">Contact Person</label>
            <input type="text" class="form-control" id="contactPerson" name="contactPerson" value="{{vendor.contactPerson}}">
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" value="{{vendor.email}}">
          </div>
        </div>
      </div>
      
      <div class="row mb-3">
        <div class="col-md-6">
          <div class="mb-3">
            <label for="phone" class="form-label">Phone</label>
            <input type="tel" class="form-control" id="phone" name="phone" value="{{vendor.phone}}">
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <label for="address" class="form-label">Address</label>
            <input type="text" class="form-control" id="address" name="address" value="{{vendor.address}}">
          </div>
        </div>
      </div>
      
      <div class="mb-3">
        <label for="notes" class="form-label">Notes</label>
        <textarea class="form-control" id="notes" name="notes" rows="3">{{vendor.notes}}</textarea>
      </div>
      
      <div class="d-flex justify-content-between">
        <a href="/vendors/{{vendor._id}}" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-save me-2"></i> Update Vendor
        </button>
      </div>
    </form>
  </div>
</div>
