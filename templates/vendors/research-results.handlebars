{{> header}}

<div class="container-fluid">
  <div class="row">
    {{> sidebar}}
    
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Research Results</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group me-2">
            <a href="/vendors/research" class="btn btn-sm btn-outline-secondary">
              <i class="fas fa-arrow-left"></i> Back to Research
            </a>
            <a href="/vendors" class="btn btn-sm btn-outline-primary">
              <i class="fas fa-list"></i> Vendor List
            </a>
          </div>
        </div>
      </div>
      
      <div class="alert alert-info mb-4">
        <i class="fas fa-info-circle"></i> Review the research results below. You can apply all changes or selectively choose what to save.
      </div>
      
      {{#if vendors.length}}
        <form action="/vendors/research/save" method="POST">
          <div class="mb-3 text-end">
            <button type="submit" class="btn btn-success">
              <i class="fas fa-save"></i> Save Selected Results
            </button>
          </div>
          
          {{#each vendors}}
            <div class="card mb-4">
              <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">{{name}}</h5>
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox" id="vendor-{{@index}}" name="vendors[{{@index}}][selected]" checked>
                  <label class="form-check-label text-white" for="vendor-{{@index}}">Include</label>
                </div>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6">
                    <h6>Company Information</h6>
                    <input type="hidden" name="vendors[{{@index}}][id]" value="{{id}}">
                    <input type="hidden" name="vendors[{{@index}}][name]" value="{{name}}">
                    
                    <div class="mb-3">
                      <label class="form-label">Website</label>
                      <input type="url" class="form-control" name="vendors[{{@index}}][website]" value="{{website}}">
                    </div>
                    
                    <div class="mb-3">
                      <label class="form-label">Description</label>
                      <textarea class="form-control" name="vendors[{{@index}}][description]" rows="3">{{description}}</textarea>
                    </div>
                    
                    <div class="mb-3">
                      <label class="form-label">Industry</label>
                      <input type="text" class="form-control" name="vendors[{{@index}}][industry]" value="{{industry}}">
                    </div>
                  </div>
                  
                  <div class="col-md-6">
                    <h6>License Information</h6>
                    <div class="table-responsive">
                      <table class="table table-sm">
                        <thead>
                          <tr>
                            <th>License Type</th>
                            <th>Estimated Cost</th>
                            <th>Save</th>
                          </tr>
                        </thead>
                        <tbody>
                          {{#each licenses}}
                            <tr>
                              <td>
                                <input type="text" class="form-control form-control-sm" name="vendors[{{@../index}}][licenses][{{@index}}][type]" value="{{type}}">
                              </td>
                              <td>
                                <input type="text" class="form-control form-control-sm" name="vendors[{{@../index}}][licenses][{{@index}}][cost]" value="{{cost}}">
                              </td>
                              <td>
                                <div class="form-check">
                                  <input class="form-check-input" type="checkbox" id="license-{{@../index}}-{{@index}}" name="vendors[{{@../index}}][licenses][{{@index}}][selected]" checked>
                                </div>
                              </td>
                            </tr>
                          {{/each}}
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
                
                <div class="mt-3">
                  <h6>Data Sources</h6>
                  <ul class="list-group">
                    {{#each sources}}
                      <li class="list-group-item">
                        <a href="{{url}}" target="_blank">{{name}} <i class="fas fa-external-link-alt"></i></a>
                      </li>
                    {{/each}}
                  </ul>
                </div>
              </div>
            </div>
          {{/each}}
          
          <div class="mb-3 text-end">
            <button type="submit" class="btn btn-success">
              <i class="fas fa-save"></i> Save Selected Results
            </button>
          </div>
        </form>
      {{else}}
        <div class="alert alert-warning">
          <i class="fas fa-exclamation-triangle"></i> No research results available. Please initiate a research query first.
        </div>
      {{/if}}
    </main>
  </div>
</div>

{{> footer}} 